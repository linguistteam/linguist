{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "lib": [
      "es2017"
    ],
    "types": [
      "react-native",
      "jest"
    ],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    // Path alias config
    "baseUrl": ".",
    "paths": {
      // These need to be mirrored in babel.config.js
      "@assets/*": [
        "src/assets/*"
      ],
      "@common": [
        "src/components/common/index"
      ],
      "@constants/*": [
        "src/constants/*"
      ],
      "@components/*": [
        "src/components/*"
      ],
      "@screens/*": [
        "src/screens/*"
      ],
      "@store": [
        "src/store"
      ],
      "@strings": [
        "src/assets/strings/index"
      ],
      "@utils": [
        "src/utils/index"
      ],
    }
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ],
  "extends": "expo/tsconfig.base"
}